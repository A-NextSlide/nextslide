{
  "content_type_detection": {
    "statistics_patterns": [
      "\\d+%",
      "\\d+[kKmMbB]",
      "\\$\\d+",
      "increased by",
      "decreased by",
      "growth of",
      "reduction of"
    ],
    "comparison_patterns": [
      "vs",
      "versus",
      "compared to",
      "better than",
      "worse than",
      "more than",
      "less than",
      "instead of"
    ],
    "process_patterns": [
      "step 1",
      "first",
      "then",
      "next",
      "finally",
      "process",
      "workflow",
      "journey"
    ],
    "list_patterns": [
      "•",
      "-",
      "\\d+\\.",
      "key points",
      "features",
      "benefits",
      "includes"
    ]
  },
  "transformation_rules": {
    "single_statistic": {
      "detection": "Content contains one key number/percentage",
      "visual_approach": {
        "hero_size": "600-900pt",
        "layout": "Center stage with supporting context",
        "components": [
          "CustomComponent for animated number",
          "Shape for background emphasis",
          "TiptapTextBlock for context (small)",
          "Image for visual metaphor",
          "Icon for contextual meaning (TrendingUp for growth, Clock for time)"
        ]
      },
      "example_transformations": {
        "95% customer satisfaction": {
          "hero": "95%",
          "hero_size": "720pt",
          "context": "customer satisfaction",
          "visual_metaphor": "Happy customers, 5-star ratings",
          "icon": "Users or Trophy at 48px"
        },
        "Reduced costs by $2.5M": {
          "hero": "$2.5M",
          "hero_size": "600pt",
          "context": "SAVED",
          "visual_metaphor": "Money stack, piggy bank, down arrow",
          "icon": "DollarSign or TrendingDown at 48px"
        }
      }
    },
    "multiple_statistics": {
      "detection": "Content contains 2-5 key numbers",
      "visual_approach": {
        "primary_stat_size": "400-600pt",
        "secondary_stats_size": "200-300pt",
        "layout": "Hierarchy with visual flow",
        "components": [
          "Multiple CustomComponents",
          "Shapes for grouping",
          "Visual connectors",
          "Icons for each stat type (Users, DollarSign, Clock, TrendingUp)"
        ]
      },
      "layout_patterns": [
        "Ascending stairs (showing growth)",
        "Dashboard grid (equal importance)",
        "Hero + supporting (one main stat)",
        "Timeline (progression)"
      ]
    },
    "comparison_content": {
      "detection": "Content compares two or more items",
      "visual_approach": {
        "layout": "Split screen or versus layout",
        "emphasis": "Size/color contrast shows winner",
        "components": [
          "Split background",
          "Contrasting colors",
          "Size difference for impact",
          "Icons to differentiate options (Shield vs Zap, Rocket vs Turtle)"
        ]
      },
      "techniques": {
        "before_after": {
          "before": "Small, muted, left side",
          "after": "Large, vibrant, right side",
          "transition": "Arrow or visual flow",
          "icons": "X or AlertCircle → CheckCircle or Trophy"
        },
        "us_vs_them": {
          "us": "Hero treatment, bright colors",
          "them": "Subdued, smaller, grayed out",
          "icons": "Trophy or Crown for us, basic Circle for them"
        },
        "option_comparison": {
          "best": "Highlighted with glow/border",
          "others": "Present but not emphasized",
          "icons": "Different icon per option for quick recognition"
        }
      }
    },
    "process_content": {
      "detection": "Content describes steps or workflow",
      "visual_approach": {
        "never": "Boring numbered list",
        "always": "Visual journey or timeline with icons",
        "components": [
          "Connected shapes or cards",
          "Progressive sizing/color",
          "Directional flow",
          "Step icons (PlayCircle, Settings, CheckCircle)"
        ]
      },
      "layout_options": {
        "horizontal_timeline": "Left to right progression with ChevronRight",
        "vertical_journey": "Bottom to top with ArrowUp icons",
        "circular_process": "Continuous cycle with RefreshCw",
        "winding_path": "S-curve with milestone icons",
        "expanding_circles": "Growth visualization with expanding icon sizes"
      }
    },
    "bullet_list_content": {
      "detection": "Content has bullet points or list items",
      "visual_approach": {
        "never": "Plain bullet list or generic Star icons",
        "always": "Designed cards with meaningful icons",
        "components": [
          "Card for each point",
          "Content-specific icon emphasis",
          "Varied positioning"
        ]
      },
      "transformation_patterns": {
        "feature_list": {
          "approach": "Icon + title + description cards",
          "layout": "Grid or staggered",
          "emphasis": "Icons in accent color",
          "icon_selection": {
            "speed": "Zap or Rocket",
            "security": "Shield or Lock",
            "scalability": "TrendingUp or Layers",
            "support": "HeadphonesIcon or Users",
            "innovation": "Lightbulb or Sparkles",
            "efficiency": "Target or Gauge",
            "reliability": "ShieldCheck or Award"
          }
        },
        "benefit_list": {
          "approach": "Benefit as hero text with icon",
          "supporting": "Explanation smaller",
          "visual": "Checkmarks, arrows up",
          "icons": "CheckCircle, TrendingUp, Award, Trophy"
        },
        "agenda_list": {
          "approach": "Timeline or journey with step icons",
          "numbering": "Large, designed numbers",
          "flow": "Connected with lines/arrows",
          "icons": "PlayCircle → Settings → CheckCircle progression"
        },
        "problem_list": {
          "approach": "Pain points with warning icons",
          "visual": "Red/orange accent",
          "icons": "AlertTriangle, XCircle, AlertCircle"
        }
      }
    },
    "quote_content": {
      "detection": "Content contains quotation marks or attribution",
      "visual_approach": {
        "typography": "Serif or script for elegance",
        "size": "200-400pt for key phrase",
        "layout": "Asymmetric for interest",
        "components": [
          "CustomComponent for styled quote",
          "Image of speaker (if available)",
          "Decorative quotation marks",
          "MessageSquare or Quote icon for visual anchor"
        ]
      },
      "styling_options": {
        "pull_quote": "Extract most impactful phrase",
        "full_quote": "Elegant typography treatment",
        "testimonial": "With speaker photo/name and MessageCircle icon"
      }
    },
    "data_table_content": {
      "detection": "Content has tabular data",
      "visual_approach": {
        "never": "Traditional table",
        "always": "Visual data story with icons",
        "components": [
          "Chart for visualization",
          "Key numbers as heroes",
          "Comparison graphics",
          "Icons for data categories"
        ]
      },
      "transformation_options": {
        "comparison_table": "Bar chart with category icons",
        "timeline_table": "Visual timeline with milestone icons",
        "feature_matrix": "Icon grid with CheckCircle and XCircle",
        "ranking_table": "Podium visual with Trophy, Medal icons"
      }
    },
    "problem_solution_content": {
      "detection": "Content describes problem and solution",
      "visual_approach": {
        "structure": "Visual transformation story",
        "problem": "Dark, cramped, small with warning icon",
        "solution": "Bright, expansive, large with success icon",
        "components": [
          "Split layout or transformation",
          "Color progression",
          "Size contrast",
          "Problem icon (AlertTriangle) → Solution icon (CheckCircle)"
        ]
      }
    },
    "call_to_action_content": {
      "detection": "Content urges action (contact, buy, start)",
      "visual_approach": {
        "cta_size": "200-400pt",
        "urgency": "Color and positioning",
        "components": [
          "Button-style shape",
          "Compelling verb",
          "Supporting benefit",
          "Action icon (ArrowRight, Send, Phone)"
        ]
      },
      "techniques": {
        "button_cta": "Large button shape with action icon",
        "text_cta": "Massive text with ArrowRight",
        "contact_cta": "Info with Mail, Phone, MapPin icons"
      }
    }
  },
  "universal_principles": {
    "find_the_story": [
      "What emotion should viewers feel?",
      "What's the transformation?",
      "What's at stake?",
      "What's the human impact?"
    ],
    "visual_hierarchy": [
      "One hero element per slide",
      "Support with 2-3 medium elements",
      "Context with smaller elements",
      "White space for breathing"
    ],
    "color_usage": [
      "Hero elements get accent colors",
      "Supporting gets muted tones",
      "Use color progression for story",
      "High contrast for emphasis"
    ],
    "movement_and_flow": [
      "Guide eye with positioning",
      "Use size to show importance",
      "Create visual path",
      "End with call to action"
    ]
  },
  "content_length_adaptations": {
    "minimal_content": {
      "word_count": "< 20 words",
      "approach": "Go MASSIVE with typography",
      "components": "Fewer but larger",
      "white_space": "Luxury of emptiness"
    },
    "moderate_content": {
      "word_count": "20-60 words",
      "approach": "Balance of elements",
      "components": "8-10 varied sizes",
      "layout": "Magazine style"
    },
    "rich_content": {
      "word_count": "60-120 words",
      "approach": "Multiple focal points",
      "components": "10-15 organized",
      "hierarchy": "Clear sections"
    },
    "dense_content": {
      "word_count": "> 120 words",
      "approach": "Break into visual chunks",
      "components": "Grouped logically",
      "techniques": "Columns, cards, sections"
    }
  },
  "icon_enhancement_rules": {
    "content_based_selection": {
      "growth_metrics": ["TrendingUp", "ArrowUp", "BarChart3"],
      "time_related": ["Clock", "Timer", "Calendar"],
      "people_related": ["Users", "UserPlus", "UserCheck"],
      "money_related": ["DollarSign", "CreditCard", "Coins"],
      "success_indicators": ["Trophy", "Award", "Medal", "Crown"],
      "process_steps": ["PlayCircle", "Settings", "CheckCircle"],
      "technology": ["Cpu", "Code", "Database", "Cloud"],
      "communication": ["MessageSquare", "Mail", "Phone", "Send"],
      "security": ["Shield", "Lock", "Key", "ShieldCheck"],
      "innovation": ["Lightbulb", "Zap", "Sparkles", "Rocket"]
    },
    "avoid_generic": {
      "never_use": ["Star", "Circle", "Square"],
      "unless": "Specifically required by content context"
    },
    "size_consistency": {
      "inline_with_text": 24,
      "list_bullets": 32,
      "feature_cards": 48,
      "section_headers": 72
    }
  }
} 