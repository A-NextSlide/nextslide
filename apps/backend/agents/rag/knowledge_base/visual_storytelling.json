{
  "visual_storytelling_principles": {
    "content_transformation": {
      "philosophy": "Never display outline text as-is. Transform it into visual narratives.",
      "mandatory_rules": [
        "Extract the EMOTION and STORY from dry facts",
        "Every number tells a human story - find it",
        "Replace bullet points with visual metaphors",
        "Turn processes into journeys",
        "Make abstract concepts tangible"
      ]
    },
    "the_hero_journey": {
      "description": "Every slide is a mini-story with conflict and resolution",
      "structure": {
        "setup": "The challenge or current state (small, muted)",
        "conflict": "The problem or tension (growing, warning colors)",
        "resolution": "The solution or achievement (large, celebratory)"
      },
      "visual_progression": "Size, color, and position tell the story arc"
    }
  },
  "transformation_techniques": {
    "statistics_to_stories": {
      "revenue_growth": {
        "boring": "Revenue increased 45%",
        "transformed": [
          "Giant '45%' in accent color taking 50% of slide",
          "Small 'last year' number fading in background",
          "Upward arrow or rocket ship metaphor",
          "Add human context: 'That's 2,000 more families served'"
        ]
      },
      "efficiency_gains": {
        "boring": "Process time reduced from 8 hours to 2 hours",
        "transformed": [
          "Clock showing 8 hours morphing to 2 hours",
          "Before: cramped, cluttered visual",
          "After: spacious, breathing room",
          "Show what people can do with 6 hours saved"
        ]
      },
      "market_share": {
        "boring": "We have 35% market share",
        "transformed": [
          "Pie chart where our slice EXPLODES out",
          "Or 35 vs 65 as David vs Goliath visual",
          "Or filling 35% of screen with brand color"
        ]
      }
    },
    "bullet_points_to_visuals": {
      "feature_list": {
        "boring": "• Fast\n• Secure\n• Reliable",
        "transformed": {
          "racing_metaphor": "Speedometer, lock, and shield icons",
          "card_layout": "Each feature as a designed card with icon",
          "word_size_hierarchy": "FAST (200pt), Secure (150pt), Reliable (100pt)"
        }
      },
      "process_steps": {
        "boring": "1. Research\n2. Design\n3. Build\n4. Launch",
        "transformed": {
          "timeline": "Horizontal journey with milestones",
          "ascending_stairs": "Each step literally higher",
          "rocket_launch": "Stages of a rocket taking off"
        }
      }
    },
    "comparisons_to_drama": {
      "before_after": {
        "visual_techniques": [
          "Split screen with stark contrast",
          "Faded/grayed 'before' vs vibrant 'after'",
          "Small cramped 'before' vs expansive 'after'",
          "Broken/whole metaphor"
        ]
      },
      "us_vs_them": {
        "approaches": [
          "David vs Goliath sizing",
          "Color contrast (muted vs vibrant)",
          "Complexity vs simplicity visuals",
          "Many vs one (showing efficiency)"
        ]
      }
    }
  },
