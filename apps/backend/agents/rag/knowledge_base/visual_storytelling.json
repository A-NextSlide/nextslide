  "icon_storytelling": {
    "philosophy": "Icons are visual vocabulary that transcend language",
    "narrative_techniques": {
      "progression_stories": {
        "description": "Use icon sequences to show transformation",
        "examples": [
          "Seed → Sprout → Tree → Forest (growth story)",
          "Lock → Key → Unlock → OpenDoor (access story)",
          "Lightbulb → Gear → Rocket → Trophy (innovation journey)",
          "X → AlertTriangle → Settings → CheckCircle (problem solving)"
        ]
      },
      "metaphorical_icons": {
        "speed": {
          "primary": ["Zap", "Rocket", "FastForward"],
          "avoid": ["Star", "Circle"]
        },
        "security": {
          "primary": ["Shield", "Lock", "ShieldCheck"],
          "avoid": ["Star", "Square"]
        },
        "growth": {
          "primary": ["TrendingUp", "Sprout", "BarChart3"],
          "avoid": ["Plus", "ArrowUp" ] 
        },
        "innovation": {
          "primary": ["Lightbulb", "Sparkles", "Brain"],
          "avoid": ["Star", "Sun"]
        }
      },
      "emotional_icons": {
        "success": ["Trophy", "Crown", "Medal", "Award"],
        "warning": ["AlertTriangle", "AlertCircle", "XOctagon"],
        "celebration": ["PartyPopper", "Gift", "Sparkles"],
        "collaboration": ["Users", "HandshakeIcon", "Share2"]
      }
    },
    "icon_as_bullet_evolution": {
      "level_1_basic": "Replace bullets with CheckCircle",
      "level_2_contextual": "Use content-specific icons (Shield for security)",
      "level_3_progressive": "Different icon per point showing progression",
      "level_4_narrative": "Icons that tell a story together"
    },
