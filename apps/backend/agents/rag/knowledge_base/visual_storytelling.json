  "slide_type_transformations": {
    "title_slides": {
      "philosophy": "First impression = lasting impression",
      "techniques": [
        "One powerful word filling screen",
        "Question that haunts the audience",
        "Striking statistic with no context (yet)",
        "Visual metaphor for the entire presentation",
        "Cinematic opening scene"
      ]
    },
    "data_slides": {
      "philosophy": "Data without story = forgotten immediately",
      "techniques": [
        "Lead with the insight, not the numbers",
        "Use visual size to show scale",
        "Compare to relatable objects",
        "Show the human impact",
        "Create tension then resolution"
      ]
    },
    "conclusion_slides": {
      "philosophy": "End with action, not summary",
      "techniques": [
        "Single powerful call-to-action",
        "The transformed future state",
        "One memorable takeaway",
        "Contact info as design element",
        "Loop back to opening metaphor"
      ]
    }
  },
