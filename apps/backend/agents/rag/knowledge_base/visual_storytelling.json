  "content_extraction_rules": {
    "find_the_hook": [
      "What's the most surprising fact?",
      "What's the human impact?",
      "What's the transformation?",
      "What's at stake?",
      "What's the one thing to remember?"
    ],
    "visual_priority": [
      "Numbers and percentages = HUGE",
      "Key outcomes = Center stage",
      "Process steps = Visual journey",
      "Comparisons = Dramatic contrast",
      "Quotes = Typography art"
    ]
