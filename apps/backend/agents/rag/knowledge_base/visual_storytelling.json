  "data_visualization_drama": {
    "make_charts_tell_stories": {
      "growth_charts": [
        "Start line chart below ground (negative) to show journey",
        "Make the growth line THICK and in accent color",
        "Add milestone markers for key events",
        "End with arrow continuing beyond chart"
      ],
      "pie_charts": [
        "Explode the most important slice",
        "Use transparency for less important segments",
        "Replace with donut chart for modern feel",
        "Or use actual imagery (pizza, clock, etc.)"
      ],
      "bar_charts": [
        "Make bars look like buildings, trees, or rockets",
        "Use gradient fills for depth",
        "Animate from zero when possible",
        "Break the frame - let success bars overflow"
      ]
    }
  },
  "typography_storytelling": {
    "size_as_narrative": {
      "technique": "Font size = importance in story",
      "example": "Start 24pt → problem 72pt → SOLUTION 400pt"
    },
    "weight_as_emotion": {
      "thin": "Delicate, premium, minimal",
      "regular": "Informative, neutral",
      "bold": "Important, confident",
      "black": "URGENT, POWERFUL"
